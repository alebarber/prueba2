pipeline {
    agent any
    environment {
        // Apuntar al contenedor DinD expuesto en la red de Jenkins
        DOCKER_HOST = 'tcp://docker_in_docker:2375'
    }
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'
                    args '-u root'
                }
            }
            steps {
                sh 'apk update && apk add docker'
                sh 'docker info'  // Se conectar√° al Docker DinD en lugar del socket del host
                sh 'python --version'
                sh 'python -m py_compile sources/add2vals.py sources/calc.py'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                    args '-u root'
                }
            }
            steps {
                sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
            }
            post {
                always {
                    junit '**/test-reports/*.xml'
                }
            }
        }

        stage('Deliver') {
            agent {
                docker {
                    image 'ubuntu:20.04'
                    args '-u root'
                }
            }
            steps {
                sh '''
                    apt-get update
                    apt-get install -y python3 python3-pip
                    pip3 install pyinstaller
                    pyinstaller --onefile sources/add2vals.py
                    cp sources/dist/add2vals ../add2vals
                    echo "Ejecutable compilado correctamente."
                '''
                archiveArtifacts artifacts: 'sources/dist/add2vals'
            }
        }
    }
}
